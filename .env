# Build Performance Optimizations
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true
FAST_REFRESH=true
DISABLE_ESLINT_PLUGIN=true

# Memory Management - Increased for large MUI builds
NODE_OPTIONS=--max-old-space-size=8192 --no-warnings

# Build Speed Optimizations
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0
DISABLE_NEW_JSX_TRANSFORM=false

# Development Optimizations
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
WDS_SOCKET_PORT=0

# TypeScript Performance
TS_NODE_COMPILER_OPTIONS={"skipLibCheck":true,"allowJs":true,"incremental":true}
TS_NODE_TRANSPILE_ONLY=true

# Webpack Optimizations
WEBPACK_ANALYZE=false
WEBPACK_CACHE=true

# React Scripts Optimizations
BROWSER=none
DISABLE_NEW_JSX_TRANSFORM=false

# Build Cache
BABEL_CACHE_DIRECTORY=node_modules/.cache/babel-loader
WEBPACK_CACHE_DIRECTORY=node_modules/.cache/webpack

# Suppress Warnings
SUPPRESS_NO_CONFIG_WARNING=true
DISABLE_OPENCOLLECTIVE=true
DISABLE_SPONSOR_MESSAGE=true

# Performance Monitoring
MEASURE_BUILD_TIME=true

# Disable source map uploading
DISABLE_SENTRY_SOURCE_MAP_UPLOAD=true

# Node.js flags for better garbage collection
NODE_ENV=development
